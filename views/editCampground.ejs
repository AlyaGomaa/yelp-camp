<% include partials/header.ejs %>

<div class="container">
    
<h1 style="text-align:center;">Edit <%=campground.name %>:</h1>
    <div class="row">
        
        <!-- the form div-->
        <div style="width:30%;margin:20px auto;">
            <div>
                    <img class="form-control" style="padding:0;margin-bottom:8px;" src="<%=campground.image%>">
            </div>
                
            <form method="POST" action="/campgrounds/<%=campground._id%>?_method=PUT" enctype="multipart/form-data">
                
                <div class="form-group">
                    Name:
                    <input class="form-control" type="text" value="<%=campground.name%>" name="campName">
                </div>
                
                <div class="form-group">
                    Campground Image:
                    <input class="form-control" accept="image/*" type="file" name="image">
                </div>
                
                <div class="form-group">
                    Description:
                    <textarea class="form-control" style="height:5%;" type="text" name="campDescription"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    Price:
                    <input class="form-control" type="number" value="<%=campground.price%>" name="campPrice">
                </div>
                
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%=campground.location%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" href="/campgrounds/:id/delete">Save Changes</button>

                </div>
                
                
                
            </form>
            <a href="/campgrounds">Back</a>

        </div>
    </div>
</div>
<% include partials/footer.ejs %>